<%- include("./parts/header")  %>

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Todo App</a>
</nav>

<div class="container my-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" id="" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Add Todo" class="btn btn-md btn-success mx-2">
    </form>

    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
        <li class="list-group-item"><%= todos.todo %>
        <a href="/delete/todo/<%= todos._id %>" class="btn btn-secondary btn-sm del">Delete</a></li>
   <% }) %>
    </ul>
</div>






